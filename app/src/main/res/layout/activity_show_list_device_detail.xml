<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_custom"
    android:orientation="vertical"
    android:id="@+id/show_list_device_detail">

    <EditText android:id="@+id/input_title_addDevice"
        android:background="@drawable/textinput_custom"
        android:maxLines="1"
        android:drawablePadding="12dp"
        android:drawableTint="#FCD824"
        android:padding="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:inputType="text"
        android:hint="input name iot" />

    <Button
        android:id="@+id/button_add_device_selected_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="0"
        android:background="@drawable/button_custom"
        android:text="@string/add_device"
        android:textSize="20sp"

        />

</RelativeLayout>