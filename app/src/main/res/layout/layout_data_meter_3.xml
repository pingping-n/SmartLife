<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.app.infideap.stylishwidget.view.AMeter
    android:id="@+id/meter3"
    android:layout_width="240dp"
    android:layout_height="240dp"
    android:layout_gravity="center"
    android:background="@color/colorAccent"
    app:sw_lineStrokeSize="25dp"
    app:sw_lineWidth="0.5"
    app:sw_maxValue="100"
    app:sw_meterColor="@color/colorWhite"
    app:sw_numberOfLine="50"
    app:sw_showNeedle="false"
    app:sw_showText="true"
    app:sw_startValue="0"
    app:sw_textSize="80dp" />

</FrameLayout>