<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorHint">@color/colorPrimary</item>

        <item name="android:fontFamily">@font/multicolore</item>

    </style>

    <!--Main screen Theme-->
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorTitle</item>

        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Splash Theme-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>

    </style>

    <!--Login Theme-->
    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorHint">@color/colorPrimary</item>

        <item name="android:fontFamily">@font/multicolore</item>

    </style>

    <style name="NavigationView" >
        <item name="fontFamily">@font/gilroy_light</item>
    </style>

</resources>
